{
  "name": "react-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "description": "react-desktop",
  "author": "hanyun<1355081829@qq.com>",
  "homepage": ".",
  "dependencies": {
    "@electron/remote": "^1.0.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "adonis": "^0.9.0",
    "antd": "^4.9.4",
    "electron-serve": "^1.0.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-app-rewired start",
    "start-electron-dev": "cross-env NODE_ENV=development electron .",
    "start-electron-pre": "cross-env NODE_ENV=pre electron .",
    "build-electron": "electron-builder",
    "build": "react-app-rewired build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-import": "^1.13.3",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "electron-nightly": "^13.0.0-nightly.20210113",
    "react-app-rewired": "^2.1.8"
  },
  "build": {
    "appId": "com.lee.react.desktop",
    "productName": "react-desktop",
    "copyright": "Copyright Â© 2020",
    "extends": null,
    "directories": {
      "output": "build-electron"
    },
    "extraResources": [
      {
        "from": "./main",
        "to": "./main"
      }
    ],
    "files": [
      "./build/**/*",
      "./main.js",
      "!node_modules/asar/**/*"
    ],
    "dmg": {
      "icon": "./Icon.icns",
      "background": "./bg1.jpeg",
      "window": {
        "x": 100,
        "y": 100,
        "width": 500,
        "height": 300
      }
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "./favicon_256.ico",
      "uninstallerIcon": "./favicon_256.ico",
      "installerHeaderIcon": "./favicon_256.ico",
      "shortcutName": "react-desktop"
    }
  }
}
